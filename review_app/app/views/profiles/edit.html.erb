<div class="container">
    <hr>
    <h2 class="text-center">Register User Account</h2>
    <hr>
    <div class="row">
    <%= form_for @profile do |f| %>
        <div class="col-1 ">
        </div>
        <div class="col-10 justify-content-center">
        <div class="container-fluid text-center text-md-left">
            <div class="row">
                    <div class="col-md-6 mt-md-0 mt-3">
                    <br>
                    <br>
                    <p>Update Your Photo</p><br>
                    <%= f.file_field :profilephoto %><br>
                    </div>
                    <div class="col-md-6 mt-md-0 mt-3 card">

                    <%= f.label :Name %><br>
                    <%= f.text_field :fullname, placeholder: 'Enter your name', class: 'form-control' %><br><br>

                    <%= f.label :DOB %><br>
                    <%= f.date_field :dob, placeholder: 'Enter your Date of Birth', class: 'form-control' %><br><br>

                    <%= f.label :Address %><br>
                    <%= f.text_field :address, placeholder: 'Enter your address', class: 'form-control' %><br><br>

                    <%= f.label :Town %><br>
                    <%= f.text_field :citytown, placeholder: 'Enter your Town/City', class: 'form-control' %><br><br>

                    <%= f.label :Country %><br>
                    <%= f.text_field :country, placeholder: 'Enter your Country', class: 'form-control' %><br><br>
                    
                    <%= f.submit 'Update Profile' %>

                    <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-1">
        </div>
    </div>
</div>