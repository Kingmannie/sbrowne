<div class="container">
    <hr>
    <h2 class="text-center">Create Profile</h2>
    <hr>

    <%= form_for @profile do |f| %>

    <div class="field" style="100%">
        <% if @profile.errors.any? %>
    <div id="error_explanation">
    <h2>
    <%= pluralize(@profile.errors.count, "error") %>
    prohibted this from being saved:
    </h2>

    <p>
    <ul>
    <% @profile.errors.full_messages.each do |msg| %>
    <li>
    <%= msg %>
    </li>
    </ul>
    <% end %>
    </p>

    <% if alert %>
    <%= alert %>
    <% end %>

    </div>
    <% end %>
        <div class="card">
        <%= f.select :user_id, User.all.collect {|x| [x.username, x.id]}, {:include_blank => 'Select User'}, class: 'form-control'%><br><br>
        <%= f.text_field :fullname, placeholder: 'Enter your name', class: 'form-control' %><br><br>
        <%= f.date_field :dob, placeholder: 'Enter your DOB', class: 'form-control' %><br><br>
        <%= f.text_field :address, placeholder: 'Enter your Address', class: 'form-control' %><br><br>
        <%= f.text_field :citytown, placeholder: 'Enter your Town/City', class: 'form-control' %><br><br>
        <%= f.text_field :country, placeholder: 'Enter your Country', class: 'form-control' %><br><br>
        <%= f.file_field :profilephoto %><br><br>
        <%= f.submit 'Create Profile' %>
        <% end %>
        </div>
    </div>

</div>